#
# Ubuntu <%= @code_name %> - Generated by Chef
#

deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @archive_url %> <%= @code_name %> main restricted universe multiverse
<% if @include_source_packages -%>deb-src <%= @archive_url%> <%= @code_name %> main restricted universe multiverse<% end -%>

deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @archive_url %> <%= @code_name %>-updates main restricted universe multiverse
<% if @include_source_packages -%>deb-src <%= @archive_url %> <%= @code_name %>-updates main restricted universe multiverse<% end -%>

#
# Security updates
#
deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @security_url %> <%= @code_name %>-security main restricted universe multiverse
<% if @include_source_packages -%>deb-src <%= @security_url %> <%= @code_name %>-security main restricted universe multiverse<% end -%>